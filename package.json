{
	"name": "email-sender",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:frontend": "vite dev --host",
		"dev:backend": "bun run src/app.ts",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"start:backend": "bun run src/app.ts",
		"start:frontend": "vite preview"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/csv-stringify": "^1.4.3",
		"@types/node": "^25.0.3",
		"@types/nodemailer": "^7.0.4",
		"@types/quill": "^2.0.14",
		"@types/sqlite3": "^3.1.11",
		"@types/xlsx": "^0.0.35",
		"bun-types": "^1.3.5",
		"concurrently": "^9.2.1",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@types/bootstrap": "^5.2.10",
		"argon2": "^0.44.0",
		"bootstrap": "^5.3.8",
		"bootstrap-icons": "^1.13.1",
		"bun": "^1.3.5",
		"csv-stringify": "^6.6.0",
		"dotenv": "^17.2.3",
		"hono": "^4.11.1",
		"install": "^0.13.0",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.12",
		"nodemon": "^3.1.11",
		"quill-image-resize-module": "^3.0.0",
		"scoop": "^0.0.2",
		"smtp": "^0.0.5",
		"sqlite3": "^5.1.7",
		"stringify": "^5.2.0",
		"xlsx": "^0.18.5"
	}
}
